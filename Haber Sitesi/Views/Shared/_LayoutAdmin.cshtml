@{
    if (Convert.ToInt32(Session["yetki"]) == 0 || Session["yetki"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="decription" content="" />
    <meta name="keywords" content="" />

    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">


</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Small Devs</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" style="padding-top:1em; color:#007bff" href="/Home/Index">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>

                    <!--DropDown-->

                    @{
                        Html.RenderAction("KategoriPartial1", "Home");
                    }








                    <li class="nav-item">
                        <a class="nav-link" style="padding-top:1em; color:#007bff" href="#">Hakkımda</a>
                    </li>

                </ul>

                <!--Butonlar-->
                @if (Session["uyeid"] == null)
                {
                    <ul class="nav navbar-nav  ml-auto ">
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Create/">Üye Ol</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Login/">Giriş</a>
                        </li>
                    </ul>


                }
                else if (Session["yetki"] != null)
                {
                    <ul class="nav navbar-nav  ml-auto ">
                        <li class="nav-item">
                            <a class="nav-link" style="padding-top:1em; color:#007bff" href="/Admin/Index/">Yönetim Paneli</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="padding-top:1em; color:#007bff" href="/Uye/Logout/">Çıkış</a>
                        </li>
                    </ul>

                }
                else
                {
                    <ul class="nav navbar-nav  ml-auto ">
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Index/">@Session["kullaniciadi"].ToString()</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Index/">Yazı Ekle</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Logout/">Çıkış</a>
                        </li>
                    </ul>
                    @*<li>
                            <button type="button" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-user" href="/UyeOl/Create/"></span> ÜYE OL
                            </button>
                        </li>
                        <li class="headaralik">
                            <button type="button" class="btn btn-success btn-sm ">
                                <span class="glyphicon glyphicon-log-in" href="/UyeOl/Login/"></span> GİRİŞ
                            </button>
                        </li>*@

                }
                <ul class="nav navbar-nav  ml-auto ">
                    <!--Bayraklar-->
                    <li class="headaralik" style="padding-right:0.5em;">
                        @Html.ActionLink("TR", "Change", "Language", new { LanguageSelection = "tr" }, null)
                    </li>
                    <li class="headaralik">
                        @Html.ActionLink("ENG", "Change", "Language", new { LanguageSelection = "en" }, null)
                    </li>
                </ul>



            </div>
        </div>
    </nav>

    <div class="container">

        <div class="row">

            <!-- Blog Gönderileri Kolonu -->
            <div class="col-md-8 ">

                @RenderBody()

            </div>
            <div class="col-md-4">
                <!-- Kategoriler Widget'ı -->
                <div class="card my-4">

                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                              
                                    <ul class="list-unstyled mb-0">
                                        <li>
                                            <a href="/AdminYazi/Index">Yazilar</a>
                                        </li>
                                        <li>
                                            <a href="/AdminUyes/Index">Uyeler</a>
                                        </li>
                                       

                                    </ul>
                                

                            </div>

                        </div>
                    </div>




                </div>

            </div>
    </div>
        </div>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; SmallDevs 2017</p>
        </div>
        <!-- /.container -->
    </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>
